<launch>	  
	<include file="$(find gazebo_ros)/launch/empty_world.launch">	    
		<arg name="world_name" value="$(find abb_irb120_gazebo)/worlds/abb_irb120.world"/>	    
		<arg name="gui" value="true"/>	  
	</include>
	<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find abb_irb120_gazebo)/urdf/abb_irb120.xacro'" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	<node name="abb_irb120_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
	 args="-urdf -param robot_description -model abb_irb120" />	
</launch>